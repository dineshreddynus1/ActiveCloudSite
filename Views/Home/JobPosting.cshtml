<!DOCTYPE html>
<html lang="en">
@model  IEnumerable<UNIVERSITYJOBSPORTAL.Dtos.JobsDTO>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Site</title>

    <style>
       

          

        body {
           
            font-family: "Arial", sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }


        .container {
            display: flex;
            flex-wrap: wrap;
           
            justify-content: center;
           
        }

        #search {
            margin-top: 20px;
            padding: 15px;
            background-color: #fff;
            border: none;
            width: 100%;
        }

        #featured-jobs {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin-top: 20px;
        }

        .job-card {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 10px;
            padding: 15px;
            width: calc(33.333% - 20px);
            box-sizing: border-box;
        }

        footer {
            background-color: #3498db;
            color: #fff;
            text-align: center;
            padding: 1em 0; 
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        table {
            font-size: 8px;
            width: 100%;
            margin-bottom: 20px;
        }

        tr {
           display: flex;
            width: 100%;
            text-align: center;
        }

        td {

            flex: 1 1 20%;
        }

        th {
          
            flex: 1 1 20%;
            text-align: center;
        }

        th,
        td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: gray;
        }

        .center-container {
            text-align: center;
        }

            .center-container button {
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
                background-color: #3498db;
                color: #fff;
                border: none;
                border-radius: 4px;
            }

        nav {
            background-color: #3498db;
            padding: 10px;
            text-align: left;
        }

            nav a {
                color: #fff;
                text-decoration: none;
                padding: 10px 20px;
                display: inline-block;
                height: 1em;
            }

        .icon-container {
            font-size: 1.25em;
        }

        .anchy {
            
            color: lightcoral;
            position: relative;
            transition: color 0.3s ease-in-out;
            display: inline-block;
            padding-bottom: 2px;
        }

            .anchy::after {
                content: "";
                display: block;

                height: 2px;
                width: 0;

                background: #007bff;
                transition: width 0.3s ease-in-out;
            }

            .anchy:hover {
                color: #007bff;
            }

                .anchy:hover::after {
                    width: 100%;
                }
    </style>

    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <h2>Manage Jobs</h2>

    <div class="container">
       

        <table>
            <thead>
                <tr>
                    <th>Position</th>
                    <th>Department</th>
                     <th>Location</th>
                    <th>Applicants</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var element in Model)
                {
                <tr>
                    <td>@element.jobName</td>
                    
                    <td>@element.department</td>
                        @Html.HiddenFor(x=>element.jobID)

                         <td>@element.Location</td>
                    <td>
                            <a class="edit-btn" href ="@Url.Action("GetApplicantsByJobId","Home", new{@id = element.jobID})">
                            See Applicants
                        </a>
                        </td>
                        <td>
                            <button class="edit-btn" onclick="location.href='@Url.Action("DeleteJobDetailsbyId", "Home", new { id = element.jobID })'">Delete</button>

                            <button class="edit-btn" onclick="location.href='@Url.Action("UpdateJobDetailsbyId", "Home", new { id = element.jobID })'">Update</button>

                    </td>
                </tr>
                }
              
            </tbody>
        </table>
        <div class="center-container">
            <a class="center-container anchy" href="@Url.Action("createJobPosting","Home")">
                Create New Job Posting
            </a>
        </div>
    </div>
</body>
</html>
