<!DOCTYPE html>
@model UNIVERSITYJOBSPORTAL.Dtos.JobApplicationDTO
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;

        color: black;
      }

      .container {
        max-width: 800px;
        margin: 30px auto;
        padding: 20px;
        border-radius: 8px;
        overflow: hidden;
      }

      h2 {
        text-align: center;
        color: #3498db;
      }

      form {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
      }

      .form-group {
        width: calc(50% - 10px);
        margin-bottom: 16px;
      }

      label {
        display: block;
        margin-bottom: 8px;
        font-size: 16px;
      }

      input,
      textarea {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid #555;
        border-radius: 4px;
        font-size: 14px;

        color: black;
      }

      textarea {
        height: 100px;
      }

      button {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        cursor: pointer;
        background-color: #3498db;
        color: #fff;
        border: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #2772a4;
      }
      nav {
        background-color: #3498db;
        padding: 10px;
        text-align: left;
      }
      .icon-container {
        font-size: 1.25em;
      }
      nav a {
        color: #fff;
        text-decoration: none;
        padding: 10px 20px;
        display: inline-block;
        height: 1em;
      }
      @@media only screen and (max-width: 600px) {
        nav a {
          display: block;
          margin-bottom: 10px;
        }

      

        nav {
          flex-direction: column;
          align-items: center;
        }

        nav.show {
          display: flex;
        }
      }
    </style>
    <link href="~/css/style.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container">
      <label
        for="jobTitle"
               style="vertical-align: middle; padding-top: 0.25em; color:  #3498db; margin-top:10px">JOB TITLE:</label>
        @Html.DisplayFor(x=>x.job.title)
       

      <label
        for="jobDescription"
               style="vertical-align: middle; padding-top: 0.25em ; color:  #3498db;margin-top:10px">JOB DESCRIPTION:</label>
        @Html.DisplayFor(x=>x.job.description)

     

      <label
        for="location"
               style=" vertical-align: middle; padding-top: 0.25em; color:  #3498db; margin-top:10px">LOCATION:</label
      >
        @Html.DisplayFor(x=>x.job.location)

      <label
        for="salary"
               style=" vertical-align: middle; padding-top: 0.25em; color:  #3498db;margin-top:10px">SALARY:</label
      >
        @Html.DisplayFor(x=>x.job.salary)

      <label
        for="positions"
               style=" vertical-align: middle; padding-top: 0.25em; color:  #3498db;margin-top:10px">#POSITIONS</label>
        @Html.DisplayFor(x=>x.job.positions)
      
        
    </div>
    <div class="container">
      <h2>Apply for this Job</h2>
        @using (Html.BeginForm("createApplicant", "Home", FormMethod.Post))
             { 
        <div class="form-group">
          <label for="fullName">Full Name:</label>
                @Html.TextBoxFor(x=>x.Name, new {  required = "required" })
                @Html.HiddenFor(x=>x.job.Id)
        </div>

        <div class="form-group">
          <label for="email">Email:</label>
                @Html.TextBoxFor(x=>x.email, new {  required = "required" })
        </div>

        <div class="form-group">
          <label for="phone">Phone:</label>
         @Html.TextBoxFor(x=>x.phone, new {  required = "required" })
        </div>

        <div class="form-group">
          <label for="id">ID:</label>
                @Html.TextBoxFor(x=>x.ApplicantID, new {  required = "required" })
        </div>

        <div class="form-group">
          <label for="id">Gender:</label>
                @Html.TextBoxFor(x=>x.gender, new {  required = "required" })
        </div>

        <div class="form-group">
          <label for="coverLetter">Cover Letter:</label>
                @Html.TextAreaFor(x=>x.coverLetter, new {  required = "required" })
        </div>

        <button type="submit">Submit Application</button>
      }
    </div>
  </body>
</html>
<script>
</script>
